{
  "name": "windsurf-print-client",
  "version": "1.0.0",
  "description": "Print client for Windsurf Print Service",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-service": "node install-service.js",
    "uninstall-service": "node uninstall-service.js"
  },
  "build": {
    "appId": "com.windsurf.printclient",
    "productName": "Windsurf Print Client",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "include": "installer.nsh"
    }
  },
  "author": "Windsurf",
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.0.12",
    "node-printer": "^1.0.4",
    "node-windows": "^1.0.0-beta.8",
    "systeminformation": "^5.21.7",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^24.9.1"
  },
  "keywords": [],
  "type": "commonjs"
}
